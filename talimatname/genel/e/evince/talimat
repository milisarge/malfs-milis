isim=evince
surum=3.28.2
devir=1

kaynak=(http://ftp.gnome.org/pub/gnome/sources/$isim/${surum%.*}/$isim-$surum.tar.xz)

derle() {
cd $isim-$surum
./configure --prefix=/usr      \
      --enable-introspection \
      --disable-static 
make
make DESTDIR=$PKG install
}
