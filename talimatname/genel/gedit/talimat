# Description: GNOME için bir metin düzenleyici
# URL: http://www.gnome.org/
# Packager: yasarciv67@gmail.com
# Depends on: gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache enchant gtk3 gtksourceview3 gvfs libpeas yelp-xsl enchant iso-codes libsoup libzeitgeist python-gobject python shared-mime-info

name=gedit
version=3.22.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
update-mime-database /usr/share/mime
gtk-update-icon-cache
gio-querymodules /usr/lib/gio/modules
glib-compile-schemas /usr/share/glib-2.0/schemas/
xdg-icon-resource forceupdate --theme hicolor
gdk-pixbuf-query-loaders --update-cache
update-desktop-database -q

./configure --prefix=/usr --disable-spell
make
make DESTDIR=$PKG install
}
