name=harfbuzz
version=1.1.2
release=1
source=(http://www.freedesktop.org/software/$name/release/$name-$version.tar.bz2)

build() {
cd $name-$version
./configure --prefix=/usr \
--with-gobject
make
make DESTDIR=$PKG install
}
