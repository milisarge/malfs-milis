isim=kmime
surum=16.08.2
devir=1

kaynak=(http://download.kde.org/stable/applications/$surum/src/$isim-$surum.tar.xz)

derle() {
  cd $isim-$surum
  cmake -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_TESTING=OFF
        
  make
  make DESTDIR=$PKG install
}
