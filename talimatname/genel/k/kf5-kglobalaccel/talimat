# Gerekler: kf5-kconfig kf5-kcoreaddons kf5-kcrash kf5-kdbusaddons kf5-kwindowsystem libxcb xcb-util-keysyms
# Grup: kde

isim=kf5-kglobalaccel
surum=5.41.0
devir=1
_isim=kglobalaccel
_surum=5.41

kaynak=( http://download.kde.org/stable/frameworks/${_surum}/${_isim}-$surum.tar.xz)

derle() {
cd ${_isim}-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

