isim=kmahjongg
surum=17.12.0
devir=1

kaynak=(http://download.kde.org/stable/applications/${surum}/src/${isim}-${surum}.tar.xz)

derle() {
cd ${isim}-${surum}
cmake -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_INSTALL_LIBDIR=lib
      
make
make DESTDIR=$PKG install
}
