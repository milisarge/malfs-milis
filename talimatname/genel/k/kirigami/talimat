isim=kirigami
surum=1.1.0
devir=1
kaynak=(http://download.kde.org/stable/$isim/$isim-$surum.tar.xz)

derle() {
  mkdir build
  cd build
  cmake ../$isim-$surum       \
    -DCMAKE_BUILD_TYPE=Release  \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib    \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
