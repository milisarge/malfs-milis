# Tanım: GnuPG için bir C, Qt ve Python sarıcı kütüphanesi
# URL: http://www.gnupg.org/related_software/gpgme/
# Paketçi: milisarge
# Gerekler: libassuan python qt5 libgpg-error
# Grup: kütüphane

isim=gpgme
surum=1.10.0
devir=1
kaynak=(ftp://ftp.gnupg.org/gcrypt/$isim/$isim-$surum.tar.bz2)

derle() {
	cd $isim-$surum
	./configure --prefix=/usr \
	--disable-fd-passing \
	--disable-gpgsm-test

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/info

  cd lang/qt
  make DESTDIR="${PKG}" install


  cd $SRC/$isim-$surum/lang/python
  make DESTDIR="${PKG}" install
}
