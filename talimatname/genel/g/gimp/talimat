# Tanım: Fotoğraf rötuşlama, görüntü kompozisyonu ve görüntü yazarlığı gibi görevler için serbestçe dağıtılan bir programdır.
# URL: http://www.gimp.org/
# Paketçi: milisarge
# Gerekler: shared-mime-info gtk2 python-gtk curl libexif xorg-libxmu xorg-libxpm openexr gegl2 poppler libmng alsa-lib babl libgudev libwmf libmypaint mypaint-brushes
# Grup: Grafik

isim=gimp
surum=2.10.0
devir=1
kaynak=(http://download.gimp.org/pub/gimp/v2.10/gimp-$surum.tar.bz2)

derle() {
	gdk-pixbuf-query-loaders --update-cache
	cd $isim-$surum
	./configure --prefix=/usr --sysconfdir=/etc \
	--enable-mp --enable-gimp-console --enable-gimp-remote \
	--enable-python --with-gif-compression=lzw --with-libcurl \
	 --without-aa --without-hal --without-gvfs --without-gnomevfs
	make -j1
	make DESTDIR=$PKG install
	sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|' "${PKG}"/usr/lib/gimp/2.0/plug-ins/*.py
}
