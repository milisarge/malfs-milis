# Tanım: Cairo tabanlı GTK tema motoru
# URL: https://launchpad.net/murrine
# Paketçi: milisarge
# Gerekler: gtk2 intltool

name=gtk-engine-murrine
version=0.98.2
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/murrine/${version::4}/murrine-$version.tar.xz)

build() {
	cd murrine-$version

	./configure \
		--prefix=/usr \
		--enable-animation \
		--enable-animationrtl

	make
	make DESTDIR=$PKG install
}
