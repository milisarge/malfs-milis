# Tanım: Hafif ve kullanıcı dostu e-posta istemcisi
# URL: http://sylpheed.sraoss.jp/en/
# Paketçi: milisarge
# Gerekler: atk expat freetype glib libpng pcre cairo cyrus-sasl xorg-fontconfig libassuan libgpg-error openldap pango gtk2 gnupg gpgme desktop-file-utils

name=sylpheed
version=3.6.0
release=1

source=(http://sylpheed.sraoss.jp/sylpheed/v${version%.*}/$name-$version.tar.bz2)

derle() {
        cd $name-$version
        ./configure --prefix=/usr \
        --enable-static=no \
        --disable-gtkspell \
        --disable-gtktest \
        --disable-compface \
        --enable-gpgme \
        --enable-ssl \
        --enable-ldap

        make
        make DESTDIR=$PKG install
}
