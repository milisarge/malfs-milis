# Description: Xfce4 panelindeki durum bildirim g√∂stergelerine eklenti
# URL: http://goodies.xfce.org/projects/panel-plugins/xfce4-statusnotifier-plugin
# Packager: yasarciv67@gmail.com
# Depends on: intltool python3 xfce4-panel libdbusmenu-gtk3 

name=xfce4-statusnotifier-plugin
version=0.2.0
release=1
source=(http://archive.xfce.org/src/panel-plugins/$name/${version%.*}/$name-$version.tar.bz2)
		
build() {
  cd "${name}-${version}"

  ./configure \
      --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --disable-static

  make
  make DESTDIR="${PKG}" install

}
