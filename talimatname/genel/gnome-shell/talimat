name=gnome-shell
version=3.22.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz
nm-libexecdir.patch)

build() {

cd $name-$version
patch -Np1 -i ../nm-libexecdir.patch
 ./configure --prefix=/usr 
make
make DESTDIR=$PKG install
}
