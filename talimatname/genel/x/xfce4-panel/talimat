# Tanım: Xfconf, Xfce için yapılandırma depolama sistemidir.
# URL: http://wiki.xfce.org/releng/4.6/general-info
# Paketçi: milisarge@gmail.com
# Gerekler: xfce4-libutil dbus-glib perl-glib 
# Grup: xfce4

_isim=xfconf

isim=xfce4-conf
surum=4.13.4
devir=1

kaynak=(https://git.xfce.org/xfce/xfconf/snapshot/xfconf-4.13.4.tar.gz)

derle() {
cd ${_isim}-$surum
./autogen.sh \
	--prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
	make
	make DESTDIR=$PKG install
find $PKG  -name perllocal.pod -exec rm {} \;
}
