# Description: Adobe Flash Player
# URL: http://www.macromedia.com
# Packager: milisarge
# Depends on: nss

name=flashplayer
version=27.0.0.159
release=1

source=(https://fpdownload.adobe.com/get/flashplayer/pdc/27.0.0.159/flash_player_npapi_linux.x86_64.tar.gz)

build() {

  install -Dm644 libflashplayer.so "$PKG/usr/lib/mozilla/plugins/libflashplayer.so"
  install -Dm644 -t "$PKG/usr/share/licenses/$name" license.pdf LGPL/notice.txt

  install -D -t "$PKG/usr/bin" usr/bin/flash-player-properties
  cp -a usr/share/{applications,icons} "$PKG/usr/share/"

}
