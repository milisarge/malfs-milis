# Tanım: Blu-Ray erişim kitaplığı.
# URL: http://www.videolan.org/developers/libbluray.html
# Paketçi: milisarge
# Gerekler: libxml2 freetype

isim=libbluray
surum=1.0.2
devir=1
kaynak=(https://get.videolan.org/$isim/$surum/$isim-$surum.tar.bz2)

derle() {
	cd $isim-$surum

	./configure \
		--prefix=/usr \
		--mandir=/usr/man

	make
	make DESTDIR=$PKG install
}
