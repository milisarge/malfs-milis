isim=amule
surum=2.3.2
devir=1
kaynak=(https://downloads.sourceforge.net/project/amule/aMule/$surum/aMule-$surum.tar.bz2)

derle() {
	cd aMule-$surum
	./configure \
	--prefix=/usr
	make
	make install DESTDIR=$PKG
}
