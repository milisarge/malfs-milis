# Tanım: YouTube.com'dan ve birkaç başka siteden videolar indirmek için küçük bir program
# URL: http://rg3.github.io/youtube-dl/
# Paketçi: Cihan_Alkan
# Gerekler: python3 python3-setuptools
# Grup: medya

isim=youtube-dl
surum=2017.12.31
devir=1
kaynak=(http://youtube-dl.org/downloads/${surum}/${isim}-${surum}.tar.gz
        https://github.com/rst0git/youtube-dl-mp3/raw/master/youtube-dl-mp3)

derle() {
cd youtube-dl
  sed -i 's|etc/bash_completion.d|share/bash-completion/completions|' setup.py
 python3 setup.py install --root="${PKG}/" --optimize=1
  mv "${PKG}/usr/share/bash-completion/completions/youtube-dl.bash-completion" \
     "${PKG}/usr/share/bash-completion/completions/youtube-dl"
  install -Dm644 youtube-dl.zsh "${PKG}/usr/share/zsh/site-functions/_youtube-dl"
  install -Dm644 LICENSE "${PKG}/usr/share/licenses/${isim}/LICENSE"
	install -Dm755 ../youtube-dl-mp3 "${PKG}/usr/bin/youtube-dl-mp3"
}
