# Tanım: MATE Masaüstü Ortamı için modern ve etkili bir menü.
# URL: https://github.com/solus-project/brisk-menu
# Paketçi: Cihan_Alkan
# Gerekler: gnome-common mate-panel meson
# Grup: grafik_tasarım

isim=brisk-menu
surum=0.5.0
devir=1
kaynak=()

derle() {

        git_indir https://github.com/solus-project/brisk-menu.git $isim
	cd $isim
	mkdir build

	meson build \
		--prefix=/usr \
		--bindir=/usr/bin \
		--libexecdir=/usr/lib/${isim}

	ninja -C build
        cd build
	DESTDIR="${PKG}" ninja install
}

