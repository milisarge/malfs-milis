name=trojita
version=0.7
release=1

source=(http://downloads.sourceforge.net/$name/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version           \
    -DQT_QMAKE_EXECUTABLE=qmake-qt5 \
    -DCMAKE_BUILD_TYPE=Release      \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
  make DESTDIR=$PKG install
}
