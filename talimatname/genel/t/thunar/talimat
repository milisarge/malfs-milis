# Tanım: Thunar dosya yöneticisi
# URL: http://thunar.xfce.org
# Paketçi: milisarge
# Gerekler: libnotify libexif exo xfce4-libui xfce4-panel desktop-file-utils
# Grup: xfce4

isim=thunar
surum=1.7.0
devir=1

kaynak=(https://git.xfce.org/xfce/thunar/snapshot/thunar-1.7.0.tar.gz
		no-root-warning.patch)
derle() {
	cd $isim-$surum
	patch $SRC/$isim-$surum/thunar/thunar-window.c $SRC/no-root-warning.patch
	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--enable-gio-unix \
		--enable-dbus \
		--enable-startup-notification \
		--enable-gudev \
		--enable-notifications \
		--enable-exif \
		--enable-pcre \
		--disable-debug
	make
	make DESTDIR=$PKG install
	sed -i 's:x-directory/gnome-default-handler;::' $PKG/usr/share/applications/Thunar-folder-handler.desktop
}
