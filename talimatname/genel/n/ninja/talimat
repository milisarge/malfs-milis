# Tanım: Hıza odaklı küçük yapı sistemi
# URL: http://martine.github.io/ninja/
# Paketçi: milisarge
# Gerekler: python

name=ninja
version=1.8.2
release=1
source=(https://github.com/martine/$name/archive/v$version.tar.gz)

derle() {
  cd $name-$version
  ./configure.py --bootstrap
  install -D -m 0755 $name $PKG/usr/bin/$name
}

